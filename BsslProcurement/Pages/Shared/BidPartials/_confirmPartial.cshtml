@model ViewModels.ConfirmPartialInputViewModel

<div class="col-12">
    <div class="row p-2">
        <div class="col-12 panel border rounded shadow p-3">
            <div class="panel-heading font-weight-bold">
                Confirm Participation
            </div>
            <div class="p-2">
                <p class="font-weight-bold px-3 pt-4 text-right">
                    <input type="date" class="form-control-sm" />
                </p>
                <p class="px-3 py-1">
                    I, <input asp-for="Name" type="text" class="form-control-sm" />, on behalf of <b>"Company Name"</b>
                    hereby confirms our interest to Participate in the ongoing Bid negotiation.
                </p>
                <div class="form-group form-inline">
                    <label>Email: </label>
                    <input asp-for="Email" class="form-control" type="text" />
                </div>
                <div class="form-group form-inline">
                    <label>Telephone: </label>
                    <input asp-for="Phone" class="form-control" type="text" />
                </div>
            </div>
        </div>
    </div>
</div>