@page
@model BsslProcurement.DeclarationModel
@{
    ViewData["Title"] = "Declaration";
    Layout = "~/Pages/Shared/_VendorBidProcessLayout.cshtml";
}

<div class="row mt-5">
    <div class="col-12 text-center">
        <h2 style="text-decoration:underline">Declaration</h2>
    </div>
    <div class="col-12 p-4">
        <p class="font-weight-bold px-3">
            Dear Esteemed Vendor,
        </p>
        <p class="px-3 py-1">
            I <input type="text" class="form-control-sm" /> representing <input type="text" class="form-control-sm" /> hereby
            sincerely declare that all the information presented and documented for the purpose of this Bid is in accordance
            with fact or truth, up to the best of my knowledge and believe  and I bear the responsibilities for the
            correctness of and otherwise, deviation from the above mentioned particulars now and at a later date.
        </p>
        <div class="form-group form-inline">
            <label>Name: </label>
            <input class="form-control" type="text" />
        </div>
        <div class="form-group form-inline">
            <label>Telephone: </label>
            <input class="form-control" type="text" />
        </div>
        <div class="form-group justify-content-around">
            <button class="btn btn-outline-primary">Confirm</button>
            <button class="btn btn-outline-dark">Cancel</button>
        </div>
    </div>
</div>