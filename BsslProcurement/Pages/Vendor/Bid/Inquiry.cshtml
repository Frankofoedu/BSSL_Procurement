@page
@model BsslProcurement.InquiryModel
@{
    ViewData["Title"] = "Inquiry";
    Layout = "~/Pages/Shared/_VendorBidProcessLayout.cshtml";
}

<h2>Inquiry</h2>

<form>
    <div class="container-fluid">
        <div class="row">

            <div class="form-inline col-12 border rounded justify-content-around pt-2">

                <div class="input-group mb-2 mr-sm-2">
                    <div class="input-group-prepend">
                        <label class="input-group-text">Select Inquiry</label>
                    </div>
                    <select class="form-control">
                        <option>Open</option>
                        <option>Closed</option>
                        <option>All</option>
                    </select>
                </div>

                <div class="input-group mb-2 mr-sm-2">
                    <div class="input-group-prepend">
                        <label class="input-group-text">Sort by</label>
                    </div>
                    <select class="form-control">
                        <option>Technical</option>
                        <option>Financial</option>
                        <option>Both</option>
                    </select>
                </div>

                <div class="input-group mb-2 mr-sm-2">
                    <button class="btn btn-default">25</button>
                </div>
            </div>

            <div class="mt-3 mb-5 col-sm-12">
                <table class="table table-striped table-responsive">
                    <thead>
                        <tr class="table-primary">
                            <th>PR No.</th>
                            <th>Request Description</th>
                            <th>No of Line Item</th>
                            <th>Procurement Type</th>
                            <th>Category</th>
                            <th>Subcategory</th>
                            <th>Date Uploaded</th>
                            <th>Budget Year</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Technical Bid</th>
                            <th>Financial Bid</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <a asp-page="/Vendor/Bid/TechnicalBidForm" class="btn btn-outline-primary">Open</a>
                            </td>
                            <td>
                                <a asp-page="/Vendor/Bid/FinancialBidForm" class="btn btn-outline-primary">Open</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-12 justify-content-around mt-4">
                <button class="btn btn-outline-dark">Previous</button>
                <button class="btn btn-outline-dark">Next</button>
            </div>
        </div>
    </div>
</form>
