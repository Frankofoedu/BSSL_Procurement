@page
@model BsslProcurement.SubmitModel
@{
    ViewData["Title"] = "Submit";
    Layout = "~/Pages/Shared/_VendorBidProcessLayout.cshtml";
}

<div class="row mt-5">
    <div class="col-12 text-center">
        <h2 style="text-decoration:underline">Submit Bid</h2>
    </div>
    <div class="col-12 p-4">
        <p class="font-weight-bold px-3 text-right">
            Dear Esteemed Vendor,
        </p>
        <p class="px-3 py-1">
            Please, Submit your Bid entries and wait for the next stage of negotiation.
        </p>
        <div class="form-group justify-content-around">
            <button class="btn btn-outline-primary">Submit</button>
            <button class="btn btn-outline-dark">Cancel</button>
        </div>
    </div>
</div>