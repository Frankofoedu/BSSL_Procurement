                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <a asp-page="/Vendor/Bid/FinancialBidForm" class="btn btn-outline-primary">View Financial Bid</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-12 justify-content-around mt-4">
                <button class="btn btn-outline-dark">Previous</button>
                <button class="btn btn-outline-dark">Next</button>
            </div>
        </div>
    </div>
</form>

