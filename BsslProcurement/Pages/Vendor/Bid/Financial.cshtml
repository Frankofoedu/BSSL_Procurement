@page
@model BsslProcurement.FinancialModel
@{
    ViewData["Title"] = "Financial";
    Layout = "~/Pages/Shared/_VendorBidProcessLayout.cshtml";
}

<h2>Financial</h2>
<form>
    <div class="container-fluid">
        <div class="row">

            <div class="form-inline col-12 border rounded justify-content-around pt-2">

                <div class="input-group input-group-sm mb-2 mr-sm-2">
                    <div class="input-group-prepend">
                        <label class="input-group-text">eFRx No</label>
                    </div>
                    <input type="text" class="form-control" />
                </div>

                <div class="input-group input-group-sm mb-2 mr-sm-2">
                    <div class="input-group-prepend">
                        <label class="input-group-text">Category</label>
                    </div>
                    <input type="text" class="form-control" />
                </div>

                <div class="input-group input-group-sm mb-2 mr-sm-2">
                    <div class="input-group-prepend">
                        <label class="input-group-text">Status</label>
                    </div>
                    <input type="text" class="form-control" />
                </div>

                <div class="input-group input-group-lg mb-2 mr-sm-2">
                    <div class="input-group-prepend">
                        <label class="input-group-text">Project Title</label>
                    </div>
                    <input type="text" class="form-control" />
                </div>

                <div class="input-group input-group-sm mb-2 mr-sm-2">
                    <div class="input-group-prepend">
                        <label class="input-group-text">No of Line item</label>
                    </div>
                    <input type="text" class="form-control" />
                </div>
            </div>

            <div class="mt-3 mb-5 col-sm-12">
                <table class="table table-striped table-responsive">
                    <thead>
                        <tr class="table-primary">
                            <th>PR No.</th>
