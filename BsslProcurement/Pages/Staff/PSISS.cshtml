@page
@model BsslProcurement.Pages.Staff.PSISSModel
@{
    ViewData["Title"] = "Static Information Setup";
}

<div class="row mt-5">
    <div class="col-md-1"></div>
    <div class="col-md-10 my-5">
        <form method="post" class="panel panel-login" enctype="multipart/form-data">
            <div class="panel-heading">
                <div class="row">
                    <p class="header-text">Portal Static Information Setup Screen</p>
                </div>
                <hr>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            @*@if (!string.IsNullOrWhiteSpace(Model.Message))
        {
            <div class="alert alert-success alert-dismissible">@Model.Message</div>
        }*@

            <div class="form-group">
                <label>Portal Name</label>
                <input asp-for="ProcurementPortalInfo.PortalName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Portal Logo <span class="text-danger">(not higher than 200kb and must be in jpeg and jpg format)</span></label>
                <input asp-for="Image" class="form-control-file" type="file" />
            </div>
            <div class="form-group">
                <label>Legal Notice</label>
                <textarea asp-for="ProcurementPortalInfo.Legal" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3"> </div>
                    <div class="col-sm-6 col-sm-offset-3">
                        <button type="submit" class="btn form-btn">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>