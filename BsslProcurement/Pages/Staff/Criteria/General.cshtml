@page
@model BsslProcurement.Pages.Staff.Criteria.GeneralModel
@{
    ViewData["Title"] = "Add General Criteria";
}

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div class="alert alert-success alert-dismissable fade show">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @Model.Message
    </div>
}
@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger alert-dismissable fade show">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @Model.Error
    </div>
}

<div class="row mt-5">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <form method="post" class="panel panel-login">
            <div class="panel-heading">
                <div class="row">
                    <p class="header-text">@ViewData["Title"]</p>
                </div>
                <hr>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Criteria Description</label>
                        <input class="form-control" placeholder="Enter Criteria Description" asp-for="GCriteria.CriteriaDescription" />
                    </div>
                    <div class="form-group">
                        <div class="form-check-inline btn btn-outline-primary">
                            <label class="form-check-label">
                                <input asp-for="GCriteria.isCompulsory" type="checkbox" class="form-check-input"> Is Compulsory Requirement
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Minimum Value</label>
                        <input class="form-control" type="number" asp-for="GCriteria.MinValue" />
                    </div>
                    <div class="form-group">
                        <div class="form-check-inline btn btn-outline-primary">
                            <label class="form-check-label">
                                <input asp-for="GCriteria.NeedsDocument" type="checkbox" class="form-check-input"> Request Document
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3"> </div>
                    <div class="col-sm-6">
                        <button id="btnSubmit" disabled type="submit" class="btn form-btn">Add Criteria</button>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
