@page
@model BsslProcurement.Pages.Staff.Administration.GroupUsersMgtModel
@{
    ViewData["Title"] = "GroupUsersMgt";
}


@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div class="alert alert-success alert-dismissable fade show">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @Model.Message
    </div>
}
@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger alert-dismissable fade show">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @Model.Error
    </div>
}



<div class="row mt-5">
    <div class="col-md-12">
        <form class="panel panel-login" id="grpUsersForm" method="post" enctype="multipart/form-data">
            <div class="panel-heading">
                <div class="row">
                    <p class="header-text"> Groups User Management</p>

                </div>
                <hr>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div>
                <div class="">

                    <div class="row p-2">
                        <a asp-page="GroupManagement">Back to Groups Management</a>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-12">
                                    <label>Group Name : <span class="font-weight-bold"> @Model.GroupName</span></label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button id="btnAddStaff" class="btn btn-outline-dark btn-block">Add Staff To Group</button>
                            </div>
                        </div>
                        <div class="col-sm-3"></div>

                        <div class="mt-3 mb-5 col-sm-12">

                            <table class="table table-striped table-bordered" id="groupTable">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Staff Name</th>

                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.GroupUsersViewModel.Count; i++)
                                    {
                                        var grp = Model.GroupUsersViewModel[i];
                                        <tr>
                                            <td>
                                                @(i + 1)
                                            </td>
                                            <td>
                                                @grp.Staff.Name
                                            </td>
                                            <td>

                                                <button class="btn btn-sm btn-outline-dark ">
                                                    <span class="btn-label"><i class="fa fa-trash"></i></span>Remove
                                                </button>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
            <partial name="~/Pages/Shared/Modals/_StaffWithEmailPartial.cshtml" model="Model.StaffEmailListObj" />
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#btnAddStaff').on('click', function (event) {
            event.preventDefault();
            loadStaffWithEmailModal();
        });


        $('#staffEmailBtn').on('click', function () {
            $('#grpUsersForm').submit();
        })
    });

</script>