@page
@model BsslProcurement.Pages.Staff.BCSetupModel
@{
    ViewData["Title"] = "Category of Contract";
}

<div class="row mt-5">
    <div class="col-md-3"></div>
    <div class="col-md-6 my-5">
        <form method="post" class="panel panel-login">
            <div class="panel-heading">
                <div class="row">
                    <p class="header-text">@ViewData["Title"]</p>
                </div>
                <hr>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            @*@if (!string.IsNullOrWhiteSpace(Model.Message))
                {
                    <div class="alert alert-success alert-dismissible">@Model.Message</div>
                }*@

            <div class="form-group">
                <label>Code : </label>
                <input class="form-control-sm ml-1" />
                <button class="btn btn-outline-primary btn-sm">...</button>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control ml-1"></textarea>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3"> </div>
                    <div class="col-sm-6 col-sm-offset-3">
                        <button type="submit" class="btn form-btn">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>