                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="vendorModal">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Vendor Details</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div id="Vendorgrid"></div>
                </div>
                <div id="Vendorspinner" class="d-flex justify-content-center">
                    <div class="loader">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts{

    <script src="~/js/jquery.fancybox.pack.js"></script>
    <script src="~/js/quill.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script>



        $(document).ready(function () {
            $(".fancybox").fancybox({
                openEffect: 'none',
                closeEffect: 'none',
                iframe: {
                    preload: false
                }
            });

            //THis function allows the user to type item code instead of using the search dialog
            //on submit, the code typed by the user will be collected
            $(function () {
                $('#reqForm').submit(function () {
                    //loop trhough all controls with 'inputclass' attribute
                    $('[codeID][type=hidden]').each(function (i, obj) {
                        var hiddenItemCode = $(obj);
                        if (!hiddenItemCode.val()) {
                            var txtItemCode = $('[codeID=' + hiddenItemCode.attr('codeID') + ']');
                            hiddenItemCode.val(txtItemCode.val());
                        }
                    });
                    // return false;
                });
            });


            //set purpose field
            var purposeValue = $("#purpose").val();
            var purposeField = document.getElementById('editor');
            purposeField.innerHTML = purposeValue;

        })

        //loads item modal
        $(function () {
            $('.loadItemModal').on('click', function () {
                $('#itemModal').modal("show");

                //get item name textbox
                var index = $(this).attr('inputclass');
                var fieldToAssign = $('[inputclass="' + 'hiddencode ' + index + '"]');
                var txtToAssign = $('[inputclass="' + 'code ' + index + '"]')
                //var txtToAssign = $('inputclass = '('.code.' + + ''))
                //    ;
                var baseUrl = [location.protocol, '//', location.host, location.pathname].join('');
                $('#Itemgrid').load(baseUrl + '?handler=ItemPartial', function () {
                    $('#Itemspinner').removeClass('d-flex');
                    $('#Itemspinner').hide();
                    $('#itemTable').dataTable();

                    $('.btnItemName').on('click', function () {
                        //assign staff name textbox
                        var btn = $(this);
                        fieldToAssign.val(btn.val());
                        txtToAssign.val(btn.val() + ' -- ' + btn.attr('itemName'));


                        $('#itemModal').modal("hide");
                        return false;
                    });
                });

                return false;

            });
        });


        //loads vendor modal
        $(function () {
            $('.loadVendorModal').on('click', function () {
                $('#vendorModal').modal("show");

                //get supplier name textbox
                var txtToAssign = $('.txt' + $(this).attr('inputclass') + '');
                var idToAssign = $('.' + $(this).attr('inputclass') + '');
                var baseUrl = [location.protocol, '//', location.host, location.pathname].join('');

                $('#Vendorgrid').load(baseUrl + '?handler=VendorPartial', function () {
                    $('#Vendorspinner').removeClass('d-flex');
                    $('#Vendorspinner').hide();
                    $('#vendorTable').dataTable();

                    $('.btnVendorName').on('click', function () {
                        //assign staff name textbox

                        var btn = $(this);
                        txtToAssign.val(btn.attr('vendorId') + "--" + btn.val());
                        idToAssign.val(btn.attr('vendorId'))

                        $('#vendorModal').modal("hide");
                        return false;
                    });
                });

                return false;

            });
        });

    </script>

}