                                                <input type="hidden" />
                                            </td>

                                            <td>
                                                <div class="flex-row d-flex">
                                                    <input type="text" codeID="@i" value=@item.StoreItemCode inputclass="code @i" />
                                                    <input type="hidden" codeID="@i" asp-for="Requisition.RequisitionItems[i].StoreItemCode" inputclass="hiddencode @i" />
