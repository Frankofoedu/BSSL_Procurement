@page "{id:int}"
@using UtilityMethods;
@model BsslProcurement.Pages.Staff.ItemRequisition.RequisitionItemPricingModel

@{
    ViewData["Title"] = "RequisitionItemPricing";
}
@section Styles{

    <link rel="stylesheet" href="~/css/jquery.fancybox.css" type="text/css" />
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />

    <style>
        .loader {
            border: 16px solid #f3f3f3;
            border-top: 16px solid #3498db;
            border-radius: 50%;
            width: 120px;
            height: 120px;
            -webkit-animation: spin 2s linear infinite;
            animation: spin 2s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>

}

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div class="alert alert-success alert-dismissable fade show">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @Model.Message
    </div>
}
@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger alert-dismissable fade show">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @Model.Error
    </div>
}

@if (Model.Requisition == null)
{
    <div class="alert alert-danger alert-dismissable fade show">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        No requisition Available
    </div>
}
else
{

    <div class="row mt-5">
        <div class="col-md-12">
            <form id="reqForm" class="panel panel-login" method="post" enctype="multipart/form-data">
                <div class="panel-heading">
                    <div class="row">
                        <p class="header-text">Purchase Requisition For @Model.Requisition.PRNumber</p>

                    </div>
                    <hr>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div>
                    <div class="">

                        <div class=" panel">

                            <div class="d-flex justify-content-center mb-3">

                                <div class="btn btn-outline-dark pl-4">
                                    <input class="form-check-input" type="radio" checked asp-for="Requisition.ProcurementType" value="Capital Procurement">
                                    @Model.Requisition.ProcurementType
                                </div>


                            </div>



                        </div>
                        <div class="row p-2">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>PR No : </label>
                                    <input class="form-control" readonly asp-for="Requisition.PRNumber" value="@Model.Requisition.PRNumber" placeholder="" />
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Date : </label>
                                    <input class="form-control" readonly asp-for="Requisition.Date" value="@Model.Requisition.Date" type="date" placeholder="Pick Date" />
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Delivery Date : </label>
                                    <input class="form-control" type="date" readonly asp-for="Requisition.DeliveryDate" placeholder="Pick Delivery Date" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Requesting Dept/Section : </label>
                                    <input class="form-control" readonly asp-for="Requisition.RequesterValue" placeholder="Enter Department" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Required At : </label>
                                    <input class="form-control" readonly value=@Model.Requisition.RequiredAtDepartment />

                                </div>
                            </div>

                            <div class="mt-3 mb-5 col-sm-12 table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr class="table-primary">
                                            <th>S/No</th>
                                            <th class="text-center">Store Item Code</th>
                                            <th class="text-center">Supplier</th>
                                            <th class="text-center">Description Of <br />Goods/Services</th>
                                            <th class="text-center">Unit Of<br />Measurement</th>
                                            <th class="text-center">Unit Price</th>
                                            <th class="text-center">Quantity </th>
                                            <th class="text-center">Amount</th>

                                        </tr>
                                    </thead>
                                    <tbody id="requisitionBody">
