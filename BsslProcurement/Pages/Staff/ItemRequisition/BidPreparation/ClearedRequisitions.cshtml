@page
@model BsslProcurement.Pages.Staff.ItemRequisition.BidPreparation.ClearedRequisitionsModel
@{
    ViewData["Title"] = "Cleared Requisitions";
}

<div class="row mt-5">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <form method="post" class="panel panel-login">
            <div class="panel-heading">
                <div class="row">
                    <p class="header-text">@ViewData["Title"]</p>
                </div>
                <hr>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <div class="alert alert-success alert-dismissable fade show">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @Model.Message
                </div>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Error))
            {
                <div class="alert alert-danger alert-dismissable fade show">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @Model.Error
                </div>
            }

        <div class="row">
            <div class="col-md-4">
                <div class="form-group form-inline">
                    <label>PRQ No : &nbsp;</label>
                    <select id="" class="form-control" >
                        <option>--Select--</option>
                    </select>
                </div>
            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group form-inline justify-content-end">
                            <label>Requesting Dept : &nbsp;</label>
                            <input id="" class="form-control" />
                            <input id="" class="form-control" />
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group form-inline justify-content-end">
                            <label>Est. Cost Amount : &nbsp;</label>
                            <input id="" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
            <div class="row pt-3 " style="">
                <div class="col-12 table-responsive table-responsive-sm">
                    <table class="table  table-striped">
                        <thead>
                            <tr class="table-primary">
                                <th>S/N</th>
                                <th>Description</th>
                                <th>Requested For</th>
                                <th>Prepared By</th>
                                <th>Date Prepared</th>
                                <th>Exp. Delivery Date</th>
                                <th>Date Sent</th>
                                <th>Name of Approver</th>
                                <th>Assigned Staff</th>
                                <th>Assigned Desigation</th>
                                <th>Procurement Type 1</th>
                                <th>Procurement Type 2</th>
                                <th>Procurement Method</th>
                                <th>Process Type</th>
                                <th>eRFX Type</th>
                                <th>Approving Remark</th>
                                <th>Budget Year</th>
                                <th>View PRQ</th>
                            </tr>
                        </thead>


                        <tbody>
                            @for (int i = 0; i < Model.Requisitions.Count; i++)
                            {
                                var item = Model.Requisitions[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@item.Description</td>
                                <td>@item.RequesterValue</td>
                                <td>@item.PreparedBy</td>
                                <td>@(((DateTime)item.DateCreated).ToShortDateString())</td>
                                <td>@(((DateTime)item.DeliveryDate).ToShortDateString())</td>
                                <td>--</td>
                                <td>--</td>
                                <td>@item.ProcurementType</td>
                                <td>@item.ProcurementType</td>
                                <td>@item.ProcurementMethod</td>
                                <td>@item.ProcessType</td>
                                <td>@item.ERFx</td>
                                <td>--</td>
                                <td>--</td>
                                <td><a asp-page="./DetailRequisition" asp-route-id="@item.Id" style="color: #007bff">View PRQ</a></td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>




        </form>
    </div>
</div>