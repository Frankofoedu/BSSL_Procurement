@page
@model BsslProcurement.Pages.Staff.ItemRequisition.BidPreparation.ERFXModel
@{
    ViewData["Title"] = "ERFX";
}

<h2>ERFX</h2>

<div class="row mt-5">
    <div class="col-md-1"></div>
    <div class="col-md-11">
        <form method="post" class="panel panel-login">
            <div class="panel-heading">
                <div class="row">
                    <p class="header-text">@ViewData["Title"]</p>
                </div>
                <hr>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <div class="alert alert-success alert-dismissable fade show">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @Model.Message
                </div>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Error))
            {
                <div class="alert alert-danger alert-dismissable fade show">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @Model.Error
                </div>
            }

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group form-inline">
                        <label>PRQ No : </label>
                        <select id="" class="form-control">
                            <option>--Select--</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group form-inline justify-content-end">
                                <label>Requesting Dept : </label>
                                <input id="" class="form-control" />
                                <input id="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group form-inline justify-content-end">
                                <label>Est. Cost Amount </label>
                                <input id="" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </form>
    </div>
</div>
