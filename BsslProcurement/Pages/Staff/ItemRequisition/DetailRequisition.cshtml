@page "{id:int}"
@using BsslProcurement.UtilityMethods
@model BsslProcurement.Pages.Staff.ItemRequisition.DetailRequisitionModel
@{
    ViewData["Title"] = "DetailRequisition";
}

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div class="alert alert-success alert-dismissable fade show">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @Model.Message
    </div>
}
@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger alert-dismissable fade show">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @Model.Error
    </div>
}


@if (Model.Requisition == null)
{
    <div class="alert alert-danger alert-dismissable fade show">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        No requisition Available
    </div>
}
else
{


    <div class="row mt-5">
        <div class="col-md-12">
            <form id="reqForm" class="panel panel-login" method="post" enctype="multipart/form-data">
                <div class="panel-heading">
                    <div class="row">
                        <p class="header-text">Purchase Requisition For @Model.Requisition.PRNumber</p>

                    </div>
                    <hr>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div>
                    <div class="">

                        <div class=" panel">

                            <div class="d-flex justify-content-center mb-3">

                                <div class="btn btn-outline-dark pl-4">
                                    @Model.Requisition.ProcurementType
                                </div>


                            </div>



                        </div>
                        <div class="row p-2">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>PR No :</label>
                                    <input class="form-control" readonly asp-for="Requisition.PRNumber" value="@Model.Requisition.PRNumber" placeholder="" />
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Date : </label>
                                    <input class="form-control" readonly asp-for="Requisition.Date" value="@Model.Requisition.Date" type="date" placeholder="Pick Date" />
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Delivery Date : </label>
                                    <input class="form-control" type="date" readonly value="@Model.Requisition.DeliveryDate" placeholder="Pick Delivery Date" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Requesting Dept/Section : </label>
                                    <input class="form-control" readonly asp-for="Requisition.RequesterValue" placeholder="Enter Department" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Required At : </label>
                                    <input class="form-control" readonly value=@Model.Requisition.RequiredAtDepartment />

                                </div>
                            </div>

                            <div class="mt-3 mb-5 col-sm-12 table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr class="table-primary">
                                            <th>S/No</th>
                                            <th class="text-center">Store Item Code</th>
                                            <th class="text-center">Supplier</th>
                                            <th class="text-center">Description Of <br />Goods/Services</th>
                                            <th class="text-center">Unit Of<br />Measurement</th>
                                            <th class="text-center">Unit Price</th>
                                            <th class="text-center">Quantity </th>
                                            <th class="text-center">Amount</th>

                                        </tr>
                                    </thead>
                                    <tbody id="requisitionBody">
                                        @for (int i = 0; i < Model.Requisition.RequisitionItems.Count; i++)
                                        {
                                            var item = Model.Requisition.RequisitionItems[i];

                                            <tr class="">

                                                <td class="">
                                                    <label>@(i + 1)</label>
                                                </td>

                                                <td>
                                                    <div class="flex-row d-flex">
                                                        <label value=@item.StoreItemCode  />
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="flex-row d-flex">
                                                        <input class="supinput @i" type="hidden" readonly asp-for="Requisition.RequisitionItems[i].VendorId" />
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="text" required asp-for="Requisition.RequisitionItems[i].Description" value="@item.Description" />
                                                </td>
                                                <td>
                                                    <input type="text" required asp-for="Requisition.RequisitionItems[i].UnitOfMeasurement" value="@item.UnitOfMeasurement" />
                                                </td>
                                                <td>
                                                    <input class="text-right" type="number" asp-for="Requisition.RequisitionItems[i].UnitPrice" value="@item.UnitPrice" />

                                                </td>
                                                <td>
                                                    <input class="text-right" type="number" required asp-for="Requisition.RequisitionItems[i].Quantity" value="@item.Quantity" />
                                                </td>

                                                <td>
                                                    <input class="text-right" type="number" asp-for="Requisition.RequisitionItems[i].Amount" />

                                                </td>

                                            </tr>

                                        }
                                    <tfoot>
                                        <tr>
                                            <td></td>
                                            <td class="font-weight-bold text-right">Total Amount : </td>
                                            <td class="font-weight-bold text-lg-center">@NairaFormat.GetNairaValue(Model.Requisition.RequisitionItems.Sum(x => Convert.ToInt32(x.Amount)))</td>
                                            <td></td>
                                        </tr>
                                    </tfoot>
                                </table>
                                <input type="hidden" id="lastIndex" value="0" />
                                @*<div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-3"> </div>
                                            <div class="col-sm-6 text-center">
                                                <button id="btnMore" class="btn btn-outline-primary">New Item</button>
                                            </div>
                                        </div>
                                    </div>*@
                            </div>


                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="my-2 col-sm-6">
                                        <div class="col-sm-12">
                                            <label>Prepared By : </label>
                                            <span class="d-flex flex-row">
                                                <input id="txtprepared" asp-for="Requisition.PreparedBy" class="form-control" readonly rows="6" placeholder="" />
                                                @*<button class="btn loadStaffModal" value="txtprepared" data-toggle="modal" data-target="#staffModal"><i class="fa fa-search"></i></button>*@

                                            </span>


                                        </div>
                                        <div class="col-sm-12 mt-2">
                                            <label>Rank : </label>
                                            <span class="d-flex flex-row">
                                                <input class="form-control" asp-for="Requisition.PreparedByRank" readonly id="txtpreparedRank" rows="6" placeholder="" />
                                            </span>

                                        </div>
                                    </div>
                                    <div class="my-2 col-sm-6">
                                        <div class="col-sm-12">
                                            <label>For : </label>
                                            <span class="d-flex flex-row">
                                                <input class="form-control" asp-for="Requisition.PreparedFor" readonly id="forStaffText" rows="6" placeholder="" />
                                                @*<button class="btn loadStaffModal" value="forStaffText" data-toggle="modal" data-target="#staffModal"><i class="fa fa-search"></i></button>*@

                                            </span>

                                        </div>
                                        <div class="col-sm-12 mt-2">
                                            <label>Rank : </label>
                                            <span class="d-flex flex-row">
                                                <input class="form-control" asp-for="Requisition.PreparedForRank" readonly id="forStaffTextRank" rows="6" placeholder="" />
                                            </span>

                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-sm-12 m-4 ">
                                @if (Model.Requisition.Attachments.Count > 0)
                                {
                                    <h5 class="font-weight-bold">Attachments</h5>
                                    <br>
                                    <div class="d-flex flex-column">
                                        <p>
                                            @foreach (var file in Model.Requisition.Attachments)
                                            {
                                                if (file.FilePath.EndsWith("pdf"))
                                                {
                                                    <a class="fancybox m-5 btn btn-link fas fa-file-pdf" data-fancybox-type="iframe" href="@Url.Content("~/Attachments/" + file.FilePath)">Open PDf Attachment</a>
                                                }
                                                else
                                                {
                                                    <a class="fancybox m-5" href="@Url.Content("~/Attachments/" + file.FilePath)"><img src="@Url.Content("~/Attachments/" + file.FilePath)" class="img-thumbnail" style="max-width : 10% !important" asp-append-version="true" /></a>

                                                }

                                            }
                                        </p>

                                    </div>
                                }

                            </div>


                            <div class="col-sm-12 m-4">
                                <div class="form-group">
                                    <h5 class="font-weight-bold">Purpose : </h5>
                                    <input type="hidden" id="purpose" value="@Model.Requisition.Purpose" />
                                    <div id="editor">

                                    </div>
                                </div>
                            </div>

                            @*<div class="col-sm-4">
                                    <div class="form-group">
                                        <input class="btn btn-block btn-danger fa-print" value="Print" type="button" placeholder="Enter Resgistration Number" />
                                    </div>
                                </div>*@
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
}

@section Scripts{

    <script src="~/js/jquery.fancybox.pack.js"></script>
    <script src="~/js/quill.js"></script>
    <script>



        $(document).ready(function () {
            $(".fancybox").fancybox({
                openEffect: 'none',
                closeEffect: 'none',
                iframe: {
                    preload: false
                }
            });




            //set purpose field
            var purposeValue = $("#purpose").val();
            var purposeField = document.getElementById('editor');
            purposeField.innerHTML = purposeValue;

        })



    </script>

}